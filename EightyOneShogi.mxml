			if (match[2] == "*") {
				if (board.study_list.length > 0) board.study_list = new Array();
				if (!board.isWinner && !(board.post_game && board.onListen)) return;
				kifuDataGrid.selectedIndex = match[1];
				board.replayMoves(match[1]);
